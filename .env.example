# AgentShip Environment Configuration Example
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
# Session Store Database (for agent short-term memory)
AGENT_SESSION_STORE_URI=postgresql://agentship_user:agentship_password@localhost:5432/agentship_session_store

# Auth Database (for MCP OAuth tokens and user connections)
AGENTSHIP_AUTH_DB_URI=postgresql://agentship_user:agentship_password@localhost:5432/agentship_auth

# ============================================
# MCP OAuth Configuration
# ============================================

# Token Encryption Key (generate with: python src/agent_framework/mcp/token_encryption.py)
MCP_TOKEN_ENCRYPTION_KEY=your_fernet_encryption_key_here

# OAuth Callback Base URL (change for production)
OAUTH_CALLBACK_BASE_URL=http://localhost:8000

# ============================================
# OAuth Provider Credentials
# ============================================

# GitHub OAuth App
# Register at: https://github.com/settings/developers
GITHUB_OAUTH_CLIENT_ID=your_github_client_id
GITHUB_OAUTH_CLIENT_SECRET=your_github_client_secret

# Slack OAuth App
# Register at: https://api.slack.com/apps
SLACK_OAUTH_CLIENT_ID=your_slack_client_id
SLACK_OAUTH_CLIENT_SECRET=your_slack_client_secret

# Google OAuth App
# Register at: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

# ============================================
# Application Configuration
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
PORT=8000

# Debug UI (set to false to disable)
DEBUG_UI_ENABLED=true

# ============================================
# Optional: API Keys for STDIO MCP Servers
# ============================================
BRAVE_API_KEY=your_brave_search_api_key
